<% extend('../layout') %>

<main>

    <h1><%= title %></h1>

    <div class="form-wrapper row">
        <div class="col-md-5">

            <form method="POST" action=<%= action %>>

                    <div class="form-group">
                        <label for="InputPseudo">Pseudo</label>
                        <input name="pseudo" type="text" class="form-control"
                               id="InputPseudo" placeholder="Enter pseudo"
                               value="<%= user.pseudo  %>" required="required">
                    </div>
                    <div class="form-group">
                        <label for="InputEmail">Adresse Mail</label>
                        <input name="email" type="email" class="form-control"
                               id="InputEmail" placeholder="Entrer une adresse mail"
                               value="<%= user.email %>" required="required">
                    </div>
                    <div class="form-group">
                        <label for="InputPassword">Mot de passe</label>
                        <input name="password" type="password" class="form-control"
                               id="InputPassword" placeholder="Mot de passe" required="required">
                    </div>
                    <div class="form-group">
                        <label for="InputFirstname">Prénom</label>
                        <input name="firstname" type="text" class="form-control"
                               id="InputFirstname" placeholder="Entrer un prénom"
                               value="<%= user.firstname %>" required="required">
                    </div>
                    <div class="form-group">
                        <label for="InputLastname">Nom</label>
                        <input name="lastname" type="text" class="form-control"
                               id="InputLastname" placeholder="Entrer un nom"
                               value="<%= user.lastname %>" required="required">
                    </div>

                    <button id="btnUpdateUser" type="submit" class="btn btn-primary">Envoyer</button>
                </form>
            </form>
        </div>
    </div>

</main>