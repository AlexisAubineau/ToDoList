<% extend('../layout') %>

<main>

    <h1 class="text-center">Users</h1>

    <div class="table-wrapper">

        <div class="table-title">
            <div class="row">
                <div class="col-sm-6">
                    <h2>Gestion <b>Utilisateurs</b></h2>
                </div>
                <div class="col-sm-6">
                    <a href="/users/add" class="btn btn-success"><i class="material-icons">&#xE147;</i>
                        <span>Ajouter un nouvel utilisateur</span>
                    </a>
                </div>
            </div>
        </div>

        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Pseudo</th>
                <th>Email</th>
                <th>Pr√©nom</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            <% for (user of users) { %>
            <tr id="user-<%= user.id %>">
                <td><%= user.pseudo %></td>
                <td><%= user.email %></td>
                <td><%= user.firstname %></td>
                <td><%= user.lastname %></td>

                <td>
                    <a href="/users/<%= user.id %>/edit" class="edit">
                        <i class="material-icons" data-toggle="tooltip" title="Editer">&#xE254;</i>
                    </a>

                    <form class="deleteUser deleteUser<%= user.id %>" method="POST" action="/users/<%= user.id %>?_method=DELETE">
                        <a href="javascript:{}" class="delete <%= user.id == locals.connectedUser.rowid ? 'disabled-link' : ''%>"
                           onclick="document.querySelector('form.deleteUser<%= user.id %>').submit(); return false;">
                            <i class="material-icons" data-toggle="tooltip" title="Supprimer">&#xE872;</i>
                        </a>
                    </form>
                </td>
            </tr>
            <% } %>
            </tbody>
        </table>
    </div>

</main>